@{
    @model List<Complaint>

    <h2>Xử lý khiếu nại khách hàng</h2>
    <table>
        <thead>
            <tr>
                <th>Mã khiếu nại</th>
                <th>Mô tả</th>
                <th>Ngày tạo</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var complaint in Model)
            {
                <tr>
                    <td>@complaint.Id</td>
                    <td>@complaint.Description</td>
                    <td>@complaint.CreatedDate.ToShortDateString()</td>
                    <td>@complaint.Status</td>
                </tr>
            }
        </tbody>
    </table>

}
