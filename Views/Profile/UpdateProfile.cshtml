@using Microsoft.AspNetCore.Identity
@using SWP_Project.Areas.Identity.Data

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@model SWP_Project.Models.Profile

@{
    ViewData["Title"] = "Cập Nhật Hồ Sơ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/updateprofile.css" asp-append-version="true" />

<main>
    <h2>Cập Nhật Hồ Sơ</h2>
    <form asp-action="UpdateProfile" method="post">
        <div class="form-group">
            <label for="name">Tên</label>
            <input type="text" class="form-control" id="name" name="Name" value="@Model.Name" required />
        </div>

        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" required />
        </div>

        <div class="form-group">
            <label for="phone">Số điện thoại</label>
            <input type="tel" class="form-control" id="phone" name="PhoneNumber" value="@Model.PhoneNumber" required />
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
        <a href="@Url.Action("Profile", "Profile")" class="btn btn-secondary">Quay lại</a>
    </form>
</main>
